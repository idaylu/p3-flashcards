<% card = @round.incorrect_cards.sample %>
<%= card.question %>

<div>
<%= form_with scope: :guess, url: guesses_path, local: true do |f| %>
  Answer: <%= f.text_field :answer %>
  <%= f.hidden_field :round_id, value: @round.id %>
  <%= f.hidden_field :card_id, value: card.id %>
  <%= f.submit "Submit" %>
<% end %>

</div>
